<div class="container mt-5">
  <h1 class="text-center">New Place</h1>
  <% if @user %>
    <form action="/places" method="post" class="mt-4">
      <div class="mb-3">
        <label for="name_input" class="form-label">Name</label>
        <input type="text" name="name" id="name_input" class="form-control" required>
      </div>
      <div class="d-flex justify-content-between">
        <a href="/places" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-success">Save</button>
      </div>
    </form>
  <% else %>
    <p class="text-muted text-center mt-3">You must first <a href="/login">login</a> to add a place.</p>
  <% end %>
</div>
