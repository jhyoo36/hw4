<h1><%= @place["name"] %></h1>
<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>
<div class="row">
  <% for entry in @entries %>
    <div class="col-12 col-sm-6 col-lg-3">
    <h3> 
      <% if @user != nil %>
        <%= @user["username"] %> 
      <% else %>
        You must first <a href="/login">login</a> to see your posts.
      <% end %>
    </h3>
    <h3><%= entry["title"] %></h3>
    <h3><%= entry["occurred_on"] %></h3>
    <h3><%= entry["description"] %></h3>
    
    <% if entry.uploaded_image.attached? %>
        <%# use url_for(post.uploaded_image) as attached file's url %>
        <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
      <% else %>
        No image attached
    <% end %>
  <% end %>
</div>
