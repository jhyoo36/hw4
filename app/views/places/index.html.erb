<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-0">Places</h1>
    <% if @user %>
      <a href="/places/new" class="btn btn-primary">New Place</a>
    <% end %>
  </div>
  <% if @user %>
    <div class="list-group mt-3">
      <% for place in @places %>
        <a href="/places/<%= place["id"] %>" class="list-group-item list-group-item-action"> <%= place["name"] %> </a>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted text-center mt-3">You must first <a href="/login">login</a> to see places.</p>
  <% end %>
</div>
